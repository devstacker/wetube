extends layouts/main

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", name="password", placeholder="Current Password", required=true)
            input(type="password", name="new-password", placeholder="New Password", required=true)
            input(type="password", name="new-password2", placeholder="Verify New Password", required=true)
            input(type="submit", value="Change Password")